@model THUD_TN408.Models.Warehouse

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Thêm nhà kho</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/HomePage/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Admin/Warhouses/Index">Danh sách kho</a></li>
            <li class="breadcrumb-item"><a href="/Admin/Warhouses/Details/@Model.Id">@Model.Name</a></li>
            <li class="breadcrumb-item active"><a href="/Admin/Warehouses/Edit/@Model.Id">Chỉnh sửa</a></li>
        </ol>
    </nav>
</div>
<div class="row justify-content-center">
    <div class="col-md-7 col-12">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title text-center">Thông tin chỉnh sửa</h5>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-1 justify-content-center">
                        <input type="hidden" asp-for="Id" />
                        <label asp-for="Name" class="col-3 col-form-label fw-bold">Tên nhà kho:</label>
                        <div class="col-9">
                            <input asp-for="Name" class="form-control" placeholder="Tên nhà kho" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row mb-1 justify-content-center">
                        <label asp-for="Address" class="col-3 col-form-label fw-bold">Địa chỉ:</label>
                        <div class="col-9">
                            <input asp-for="Address" class="form-control" placeholder="Địa chỉ" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="d-flex">
                        <input type="submit" value="Lưu chỉnh sửa" class="mx-auto mt-2 btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
