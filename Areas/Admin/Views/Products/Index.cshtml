@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<THUD_TN408.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Danh mục sản phẩm</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/HomePage/Index">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="/Admin/Products/Index">Danh sách sản phẩm</a></li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-body">
                @if (Model != null && Model.Count > 0)
                {
                    <partial name="_ListProduct" model="Model"/>
                }
                else
                {
                    <h6 class="card-title text-center">Danh sách sản phẩm trống</h6>
                    <div class="d-flex">
                        <a asp-action="Create" asp-controller="Products" class="btn btn-sm btn-primary mx-auto">Thêm sản phẩm mới</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
