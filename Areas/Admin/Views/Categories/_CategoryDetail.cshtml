@model THUD_TN408.Models.Category
<table class="table table-hover">
    <tr>
        <td class="fw-bold">ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td class="fw-bold">Tên danh mục</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td class="fw-bold">Trạng thái</td>
        @if (Model.IsActive == true)
        {
            <td>
                <span class="badge rounded-pill bg-success"><i class="fa fa-check me-1"></i>Đang kinh doanh</span>
            </td>

        }
        else
        {
            <td>
                <span class="badge rounded-pill bg-dark"><i class="fa fa-close me-1"></i>Ngừng kinh doanh</span>
            </td>
        }
    </tr>
</table>
<div class="d-flex">
	<div class="mx-auto">
		<a class="btn btn-sm btn-info mx-auto" asp-action="Index" asp-controller="Categories" title="Danh sách"><i class="fa fa-bars "></i></a>
        <a class="btn btn-sm btn-primary mx-auto" asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id" title="Chỉnh sửa" ti><i class="fa fa-pen-to-square"></i></a>
    </div>
</div>