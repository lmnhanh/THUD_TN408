@model THUD_TN408.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Thêm danh mục sản phẩm</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/HomePage/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Admin/Categories/Index">Danh mục sản phẩm</a></li>
            <li class="breadcrumb-item active"><a href="/Admin/Categories/Create">Thêm</a></li>
        </ol>
    </nav>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 col-12">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title text-center">Thông tin danh mục mới</h5>
                <form asp-action="Create" id="create_form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-1 justify-content-center">
                        <label asp-for="Name" class="col-4 col-form-label fw-bold">Tên danh mục:</label>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control" placeholder="Tên danh mục" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>
                </form>
                <div class="d-flex">
                    <input type="submit" form="create_form" value="Lưu" class="mx-auto mt-2 btn btn-sm btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
