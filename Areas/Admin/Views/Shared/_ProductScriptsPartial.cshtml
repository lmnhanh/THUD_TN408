<script>    
    function ModifyProduct(id) {
        event.preventDefault();
        var url = event.currentTarget.href.substr(location.origin.length, 99)
        $.ajax({
            type: "POST",
            url: url,
        }).done(response => {
            document.querySelector("#product_" + id).innerHTML = response
        })
    }
    function ModifyDetail(id) {
        event.preventDefault();
        var url = event.currentTarget.href.substr(location.origin.length, 99)
        $.ajax({
            type: "POST",
            url: url,
        }).done(response => {
            document.querySelector("#detail_" + id).innerHTML = response
        })
    }
</script>
