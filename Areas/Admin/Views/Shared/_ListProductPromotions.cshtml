@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<THUD_TN408.Models.ProductPromotion>

@{int? productId = (int?)ViewData["productId"];}
@if(Model?.Any() == true){
    <a asp-action="Create" asp-controller="ProductPromotions" asp-route-productId="@productId" class="btn btn-sm btn-outline-primary fw-bold position-absolute top-0 end-0 m-3">Thêm &nbsp;<i class="fa fa-plus"></i></a>
    <h5 class="card-title text-center">Danh sách khuyến mãi</h5>
    <table class="table table-hover datatable">
        <thead>
            <tr>
                <th>
                    Tên
                </th>
                <th>
                    Ngày áp dụng
                </th>
                <th>
                    Ngày kết thúc
                </th>
                <th>
                    Tỉ lệ giảm
                </th>
                <th>
                    Trạng thái
                </th>
                <th>Tùy chọn</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var promotion in Model)
            {
                <partial name="_ProductPromotion" model="promotion" />
            }
        </tbody>
    </table>
    @if (!Model.IsFirstPage || !Model.IsLastPage)
    {
        <nav>
            @Html.PagedListPager(Model, page => Url.ActionLink("Paging", "ProductPromotions", new {page = page, productId = productId}), new PagedListRenderOptions()
            {
                ActiveLiElementClass = "active",
                PageClasses = new[]{ "page-link"},
                LiElementClasses=new[] { "page-item" },
                LinkToFirstPageFormat = "<i class=\"fa fa-angles-left\"></i>",
                LinkToLastPageFormat = "<i class=\"fa fa-angles-right\"></i>",
                UlElementClasses = new[] { "pagination", "pagination-sm","justify-content-center", "mt-3" },
                LinkToNextPageFormat = "<i class=\"fa fa-angle-right\"></i>",
                LinkToPreviousPageFormat = "<i class=\"fa fa-angle-left\"></i>",
                MaximumPageNumbersToDisplay = 4,
                DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded,
                DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded
            })
        </nav>
    }
}else{
    <h6 class="card-title text-center">Chưa có khuyến mãi cho sản phẩm này</h6>
    <div class="d-flex">
        <a asp-action ="Create" asp-controller="ProductPromotions" asp-route-productId="@productId" class="btn btn-sm btn-primary mx-auto">Thêm khuyến mãi mới</a>
    </div>
}
<script>
    var links = document.querySelectorAll(".page-link");
    links.forEach(link => {
        link.addEventListener("click", () => {
            event.preventDefault();
            var url = link.href.substr(location.origin.length, 99)
            $.ajax({
                type: "GET",
                url: url
            }).done(response => {
                $("#promotionsTable").html(response)
            })
        })
    })
    makeDataTable()
</script>