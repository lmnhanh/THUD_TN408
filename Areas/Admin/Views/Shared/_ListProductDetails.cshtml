@model IPagedList<THUD_TN408.Models.ProductDetail>
<table class="table table-hover datatable">
    <thead>
        <tr>
            <th>
                Hình ảnh
            </th>
            <th>
                Kích cỡ
            </th>
            <th>
                Màu sắc
            </th>
            <th>
                Phái
            </th>
            <th>Tùy chọn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model)
        {
            <partial name="_ProductDetail" model="detail" />
        }
    </tbody>
</table>
