<script>
    function ModifyPPromotion() {
        event.preventDefault();
        var id = event.currentTarget.dataset.id
        var url = event.currentTarget.href.substr(location.origin.length, 99)
        $.ajax({
            type: "POST",
            url: url,
        }).done(response => {
            document.querySelector("#ppromotion_" + id).innerHTML = response
        })
    }
</script>