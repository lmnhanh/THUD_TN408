@model THUD_TN408.Models.ProductDetail

@{
    ViewData["Title"] = "Chỉnh sửa chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>Chỉnh sửa thông tin chi tiết sản phẩm</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/HomePage/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/Admin/Products/Index">Danh sách sản phẩm</a></li>
            <li class="breadcrumb-item"><a href="/Admin/ProductDetails/Details/@Model.Id">Chi tiết @Model.Id</a></li>
            <li class="breadcrumb-item active"><a href="/Admin/ProductDetails/Edit/@Model.Id">Chỉnh sửa</a></li>
        </ol>
    </nav>
</div>
<div class="row justify-content-center">
    <div class="col-md-10 col-12">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title text-center">Thông tin chỉnh sửa</h5>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row mb-1 justify-content-center">
                        <label asp-for="Size" class="col-3 col-form-label fw-bold">Kích cỡ:</label>
                        <div class="col-9">
                            <input asp-for="Size" class="form-control" placeholder="Kích cỡ" />
                            <span asp-validation-for="Size" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row mb-1 justify-content-center">
                        <label asp-for="Color" class="col-3 col-form-label fw-bold">Màu sắc:</label>
                        <div class="col-9">
                            <input asp-for="Color" class="form-control" placeholder="Màu sắc" />
                            <span asp-validation-for="Color" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="row mb-1 justify-content-center align-middle">
                        <label asp-for="Gender" class="col-3 col-form-label fw-bold">Phái:</label>
                        <div class="col-9 form-check ps-5 pt-1">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" asp-for="Gender" /> Nam
                            </label>
                        </div>
                    </div>
                    <div class="row mb-1 justify-content-center">
                        <label for="Image1" class="col-3 col-form-label fw-bold">Hình ảnh:</label>
                        <div class="col-9">
                            <input class="form-control" asp-for="Image1" name="Image1" type="file">
                        </div>
                    </div>
                    <div class="row mb-1 justify-content-center">
                        <label for="Image2" class="col-3 col-form-label fw-bold">Hình ảnh:</label>
                        <div class="col-9">
                            <input class="form-control" asp-for="Image2" name="Image2" type="file">
                        </div>
                    </div>
                    <div class="row mb-1 justify-content-center">
                        <label asp-for="ProductId" class="col-3 col-form-label fw-bold">Sản phẩm:</label>
                        <div class="col-9">
                            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                        </div>
                    </div>
                    <div class="d-flex">
                        <input type="submit" value="Lưu chỉnh sửa" class="mx-auto mt-1 btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
