@model THUD_TN408.Models.ProductDetail

<div class="modal fade" id="productView_@Model.Id" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content overflow-hidden border-0">
            <button class="btn-close p-4 position-absolute top-0 end-0 z-index-20 shadow-0" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="modal-body p-0">
                <div class="row align-items-stretch">
                    <div class="col-lg-6 p-lg-0">
						<a class="glightbox product-view d-block h-100 bg-cover bg-center" style="background: url(/images/products/@Model.Image1)" href="~/images/products/@Model.Image1" data-gallery="gallery_@Model.Id" data-glightbox="@Model.Id"></a>
                        <a class="glightbox d-none" href="~/images/products/@Model.Image2" data-gallery="gallery_@Model.Id" data-glightbox="@Model.Id"></a>
                    </div>
                    <div class="col-lg-6">
                        <div class="p-4 my-md-4">
                            <h2 class="h4">@Model.Name</h2>
                            <partial name="_ProductPrice" model="Model" />
                            <p class="text-sm mb-4">@Html.Raw(Model.Product?.Description)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>