@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_Layout2.cshtml";
}
<div class="row justify-content-center">
    <div class="col-md-5 col-6">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title text-center">Đăng kí</h5>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="Họ lót"/>
                        <label asp-for="Input.FirstName">Họ lót</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="Tên"/>
                        <label asp-for="Input.LastName">Tên</label>
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email"/>
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu"/>
                        <label asp-for="Input.Password">Mật khẩu</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu" />
                        <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="d-flex">
                        <button id="registerSubmit" type="submit" class="btn btn-primary mx-auto">Đăng kí</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
