@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/logo/logo.png">
    <link href="~/css/style.min.css" rel="stylesheet">
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-5 col-10">
            <div class="card shadow mt-5">
                <h5 class="card-title text-center mt-3">Đăng nhập hệ thống</h5>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger list-style-none"></div>
                        <div class="form-floating mt-1">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mt-1">
                            <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="d-flex mt-1 mb-0">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-sm mx-auto">Đăng nhập</button>
                        </div>
                        <div class ="text-center mt-2">
                                <a class="text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                            @*<p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>
